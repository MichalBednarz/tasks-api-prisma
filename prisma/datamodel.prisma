type Project {
	id: Int! @id
	name: String! @unique
	subprojects: [Subproject!]!
}

type Subproject {
	id: Int! @id
	name: String! @unique
	project: Project!
	tasks: [Task!]!
}

type Task {
	id: Int! @id
	name: String!
	priority: String
	comments: String
	repeat: Int
	estimateTime: String
	plannedTime: String
	plannedDate: String
	finishDate: String
	deadlineDate: String
	completed: Boolean! @default(value: false)
	subproject: Subproject
	timelogs: [Timelog!]! @relation(onDelete: CASCADE)
	tags: [Tag!]! @relation
}

type Timelog {
	id: Int! @id
	startDate: DateTime
	finishDate: DateTime
	description: String
	task: Task!
}

type Tag {
	id: Int! @id
	name: String! @unique
	tasks: [Task!]! @relation(onDelete: SET_NULL)
}